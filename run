#!/bin/bash

cmd=$1

version="0.0.0"

shift

help() {
    echo " Commands:"
    echo "   install       Install the site"
    echo "   build         Build the site"
    echo "   app           Run the site"
}

_run_complete()
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="install build app"

    if [[ ${cur} == * ]] ; then
        COMPREPLY=( $(compgen -W "${opts}"  -- ${cur}) )
        return 0
    fi
}

complete -F _run_complete run
[[ -d venv ]] && . ./venv/bin/activate

case $cmd in
    "install") 
        python -m venv venv
        . ./venv/bin/activate
        poetry install
        ;;
    "build")
        mkdocs build --config-file blog/mkdocs.yml --site-dir web
        ;;
    "app")
        mkdocs serve --config-file blog/mkdocs.yml
        ;;
    *) help;;
esac